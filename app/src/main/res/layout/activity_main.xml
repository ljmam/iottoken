<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/line"
    android:clipChildren="false"
    tools:context="co.yzq.zxing.MainActivity">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </WebView>

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:padding="30dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/settitle"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/Txhash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/Txhash"
                    tools:layout_editor_absoluteX="135dp"
                    tools:layout_editor_absoluteY="467dp" />

                <Switch
                    android:id="@+id/Blockno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/Blockno"
                    tools:layout_editor_absoluteX="143dp"
                    tools:layout_editor_absoluteY="399dp" />

                <Switch
                    android:id="@+id/UnixTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/unixtimestamp"
                    tools:layout_editor_absoluteX="143dp"
                    tools:layout_editor_absoluteY="120dp" />

                <Switch
                    android:id="@+id/DateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/DateTime"
                    tools:layout_editor_absoluteX="141dp"
                    tools:layout_editor_absoluteY="169dp" />

                <Switch
                    android:id="@+id/From"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/From"
                    tools:layout_editor_absoluteX="143dp"
                    tools:layout_editor_absoluteY="345dp" />

                <Switch
                    android:id="@+id/To"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/To"
                    tools:layout_editor_absoluteX="138dp"
                    tools:layout_editor_absoluteY="213dp" />

                <Switch
                    android:id="@+id/Quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/Quantity"
                    tools:layout_editor_absoluteX="143dp"
                    tools:layout_editor_absoluteY="283dp" />
            </LinearLayout>
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#630000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dd"
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/a1_2" />

        <ImageView
            android:id="@+id/dd2"
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/a3_2" />

        <ImageView
            android:id="@+id/scanBtn"
            android:layout_width="0dip"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/s3" />

        <ImageView
            android:id="@+id/dd3"
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/a4_2" />

        <ImageView
            android:id="@+id/dd4"
            android:layout_width="0dip"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:scaleType="fitCenter"
            android:src="@drawable/a2_2" />
    </LinearLayout>

    </LinearLayout>


